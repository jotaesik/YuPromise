<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/android_lar"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:clipToOutline="true"
    android:background="@drawable/android_lar1">


    <View
        android:id="@+id/rectangle_16"
        android:layout_width="320dp"
        android:layout_height="90dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="31dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="31dp"
        android:background="@drawable/rectangle_16" />

    <ImageView
        android:id="@+id/my_image"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="55dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/ellipse_20"
        >

    </ImageView>

    <TextView
        android:id="@+id/my_nickname"
        android:layout_width="100dp"
        android:layout_height="24dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="127dp"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/test1"
        android:gravity="top"
        android:text="내닉네임"
        android:textAppearance="@style/my_nickname"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/my_id_number"
        android:layout_width="120dp"
        android:layout_height="18dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="137dp"
        android:layout_marginTop="75dp"
        android:fontFamily="@font/test1"
        android:gravity="top"
        android:text="아이디 / 전화번호"
        android:textAppearance="@style/my_id_number" />


    <Button
        android:id="@+id/remake_button1"
        android:layout_width="52dp"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="264dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/shadow2"
        android:elevation="2dp"
        android:fontFamily="@font/test1"
        android:gravity="center"
        android:text="편집"
        android:textColor="#FFFFFF"
        android:textSize="18dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/alarm_switch"
        android:layout_width="84dp"
        android:layout_height="24dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="122dp"
        android:fontFamily="@font/test1"
        android:gravity="center"
        android:text="알람설정"
        android:textAppearance="@style/my_nickname"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/alarm_switch_on"
        android:layout_width="44dp"
        android:layout_height="24dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="122dp"
        android:fontFamily="@font/test1"
        android:gravity="center"
        android:text="on"
        android:textColor="#000000"
        android:textSize="25dp"
        android:textStyle="bold" />

    <Switch
        android:id="@+id/sw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="122dp"
        android:switchMinWidth="65dp"
        android:text=""
        android:textOff=""
        android:textOn=""
        android:thumb="@drawable/switch_thumb"
        android:track="@drawable/switch_sum" />

    <TextView
        android:id="@+id/alarm_switch_off"
        android:layout_width="44dp"
        android:layout_height="24dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="254dp"
        android:layout_marginTop="122dp"
        android:fontFamily="@font/test1"
        android:gravity="center"
        android:textSize="25dp"

        android:text="off"
        android:textColor="#000000"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/jindong_switch_on"
        android:layout_width="44dp"
        android:layout_height="24dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="134dp"
        android:layout_marginTop="164dp"
        android:fontFamily="@font/test1"
        android:gravity="center"
        android:text="on"
        android:textColor="#000000"
        android:textSize="25dp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/jindong_switch"
        android:layout_width="84dp"
        android:layout_height="24dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="163dp"
        android:fontFamily="@font/test1"
        android:gravity="center"
        android:text="진동모드"
        android:textAppearance="@style/my_nickname"
        android:textStyle="bold" />

    <Switch
        android:id="@+id/sw1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="163dp"
        android:switchMinWidth="65dp"
        android:text=""
        android:textOff=""
        android:textOn=""
        android:thumb="@drawable/switch_thumb"
        android:track="@drawable/switch_sum" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="220dp"
        android:fontFamily="@font/test1"
        android:text="오늘의 날씨"
        android:textColor="#6667AB"
        android:textSize="30dp"
        android:textStyle="bold" />

    <View
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="260dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/shadow3" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="47dp"
        android:layout_marginTop="270dp"
        android:layout_marginRight="50dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/weather_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:maxWidth="200dp"
            android:maxHeight="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/sun2" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_weight="50"
            android:orientation="vertical">

            <TextView
                android:id="@+id/now_temp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/test1"
                android:text="현재기온"
                android:textColor="#6667AB"
                android:textSize="30dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/now_sky"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/test1"
                android:text="하늘상태"
                android:textColor="#6667AB"
                android:textSize="30dp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/test1"
                    android:text="최고"
                    android:textColor="#6667AB"
                    android:textSize="30dp"
                    android:id="@+id/now_up"
                    android:textStyle="bold" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/test1"
                    android:text="/"
                    android:textColor="#6667AB"
                    android:textSize="30dp"
                    android:textStyle="bold" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/test1"
                    android:text="최저"
                    android:textColor="#6667AB"
                    android:textSize="30dp"
                    android:id="@+id/now_down"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="380dp"
        android:fontFamily="@font/test1"
        android:text="이렇게 입어보아요!!"
        android:textColor="#6667AB"
        android:textSize="30dp"
        android:textStyle="bold" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="410dp">
        <TextView
            android:layout_marginTop="25dp"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/test1"

            android:text="온도 설명 ex)날씨가 많이 추우니 따뜻하게 입어야해요"
            android:textColor="#6667AB"
            android:id="@+id/dress_text"
            android:gravity="center"
            android:textSize="20dp"
            android:textStyle="bold" />
        <ImageView
            android:id="@+id/dress_image"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginLeft="10dp"
            android:adjustViewBounds="true"
            android:layout_marginBottom="10dp"
            android:maxWidth="200dp"
            android:maxHeight="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/bear1" />

    </LinearLayout>

   

    <TextView
        android:id="@+id/jindong_switch_off"
        android:layout_width="44dp"
        android:layout_height="24dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="256dp"
        android:layout_marginTop="163dp"
        android:fontFamily="@font/test1"
        android:gravity="center"
        android:text="off"
        android:textColor="#000000"
        android:textSize="25dp"
        android:textStyle="bold" />


    <Button
        android:id="@+id/logout_button"
        android:layout_width="76dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="254dp"
        android:layout_marginTop="535dp"
        android:background="@drawable/shadow2"
        android:elevation="2dp"
        android:fontFamily="@font/test1"
        android:gravity="center"
        android:text="로그아웃"
        android:textColor="#FFFFFF"
        android:textSize="20dp"
        android:textStyle="bold" />
</RelativeLayout>

