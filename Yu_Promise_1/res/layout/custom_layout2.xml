<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_height="400dp"
    android:background="@drawable/custom_layout_line">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/promise_title0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#6667AB"
            android:fontFamily="@font/test1"
            android:gravity="center"
            android:text="약속 리스트"
            android:textColor="#ffffff"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/promise_title1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="60dp"
            android:fontFamily="@font/test1"
            android:gravity="center"
            android:shadowColor="#40000000"
            android:shadowDx="0"
            android:shadowDy="1"
            android:shadowRadius="1"
            android:text="약속 리스트를 눌러주세요"
            android:textSize="25dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="280dp"
            android:layout_height="300dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="100dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/rectangle_24"
            android:elevation="1dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:background="#6667AB">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:fontFamily="@font/test1"
                    android:gravity="center"
                    android:text="약속시간"
                    android:textColor="#ffffff"
                    android:textSize="20dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:fontFamily="@font/test1"
                    android:gravity="center"
                    android:text="약속 장소"
                    android:textColor="#ffffff"
                    android:textSize="20dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:fontFamily="@font/test1"
                    android:gravity="center"
                    android:text="참여하는 친구들"
                    android:textColor="#ffffff"
                    android:textSize="20dp" />
            </LinearLayout>
            <ListView
                android:id="@+id/listview6"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:choiceMode="singleChoice"
                tools:listitem="@layout/item_promise_list" />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>